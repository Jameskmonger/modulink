#!/usr/bin/env node

var link = require('fs-symlink'),
    path = require('path'),
    minimist = require('minimist');

var args = minimist(process.argv.slice(2));

if (!args.name) {
    console.log('Usage:\n    --name PACKAGE_NAME (--name modulink)');
    return;
}

var cwd = process.cwd();
var fromLink = cwd;
var toLink = path.join(cwd, 'node_modules', args.name);
